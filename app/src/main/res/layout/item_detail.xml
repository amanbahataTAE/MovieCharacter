<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        fresco:placeholderImage="@drawable/my_drawable" />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_text"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="com.example.aman1.moviecharacters.ItemDetailFragment" />

    <TextView
        android:id="@+id/item_detail_not_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/my_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Image not available"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>

